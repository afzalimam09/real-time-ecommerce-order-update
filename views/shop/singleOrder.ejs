<%- include('../includes/head.ejs') %>

  </head>
<body>

  <!-- Navigation and Cart Side Panel  -->
  <%- include('../includes/navigation.ejs') %>
  
    <!-- breadcrum -->
    <div class="py-4 container flex gap-3 items-center font-roboto">
        <a href="/" class="text-primary text-base">
            <ion-icon name="home" class="block"></ion-icon>
        </a>
        <span class="text-sm text-gray-400">
            <ion-icon name="chevron-forward-outline" class="block"></ion-icon>
        </span>
        <a href="/orders" class="text-gray-600 font-medium">Orders</a>
        <span class="text-sm text-gray-400">
            <ion-icon name="chevron-forward-outline" class="block"></ion-icon>
        </span>
        <p class="text-gray-600 font-medium">Order Status</p>
    </div>
    <!-- breadcrum end -->

    <!-- Single Order Wrapper -->

    <section class="status">
        <div class="container pb-16 pt-4">
            <div class="status-box w-full lg:w-2/3 mx-auto">
                <div class="md:flex items-center justify-between mb-12">
                    <h1 class="text-xl font-bold mb-2">Your Order Status</h1>
                    <h6 class="bg-white py-1 rounded-full text-primary text-xs"><%=
                        order._id %></h6>
                    <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
                </div>
                <ul class="ml-10">
                    <li class="status_line text-sm md:text-xl pb-16" data-status="order_placed"><span>Order Placed</span>
                    </li>
                    <li class="status_line text-sm md:text-xl pb-16" data-status="confirmed"><span>Order confirmation</span>
                    </li>
                    <li class="status_line text-sm md:text-xl pb-16" data-status="shipped"><span>Shipped</span></li>
                    <li class="status_line text-sm md:text-xl pb-16" data-status="delivered"><span>Out for delivery </span>
                    </li>
                    <li class="status_line text-sm md:text-xl" data-status="completed"><span>Complete</span></li>
                </ul>
            </div>
        </div>
    </section>


<!-- Footer and back to top -->
<%- include('../includes/footer.ejs') %>

<!-- End of the file -->
<%- include('../includes/end.ejs') %>